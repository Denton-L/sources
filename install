#!/bin/sh

INSTALL_LOCATION=$HOME/.local
case "$1" in
	vim)
		cd vim/
		./configure --prefix=$INSTALL_LOCATION
		make
		make install
		;;
	curl)
		cd curl/
		./buildconf
		./configure --prefix=$INSTALL_LOCATION
		make
		make install
		;;
	git)
		cd git/
		CPPFLAGS="-I $INSTALL_LOCATION/include" LDFLAGS="-L$INSTALL_LOCATION/lib" ./configure --prefix=$INSTALL_LOCATION
		make
		make install
		;;
	*)
		echo You must specify a valid argument.
		;;
esac
