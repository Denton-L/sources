#!/bin/sh

INSTALL_LOCATION=$HOME/.local
SOURCES=`pwd`

install_vim () {
	cd $SOURCES/vim/
	./configure --prefix=$INSTALL_LOCATION
	make -j
	make install
}

install_curl () {
	cd $SOURCES/curl/
	./buildconf
	./configure --prefix=$INSTALL_LOCATION
	make -j
	make install
}

# curl is a dependency
install_git () {
	cd $SOURCES/git/
	CPPFLAGS="-I $INSTALL_LOCATION/include" LDFLAGS="-L$INSTALL_LOCATION/lib" ./configure --prefix=$INSTALL_LOCATION
	make -j
	make install
}

install_thefuck () {
	pip3 install --user thefuck --upgrade
}

install_virtualenv () {
	pip3 install --user virtualenv --upgrade
}

case "$1" in
	all)
		install_vim
		install_curl
		install_git
		install_thefuck
		install_virtualenv
		;;
	vim)
		install_vim
		;;
	curl)
		install_curl
		;;
	git)
		install_git
		;;
	thefuck)
		install_thefuck
		;;
	virtualenv)
		install_virtualenv
		;;
	*)
		echo You must specify a valid argument.
		;;
esac
